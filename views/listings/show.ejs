<% layout('/layouts/boilerplate') -%>
<body>
    <h1 style='text-align:center'><%= a.title %></h1> 
    <img src=<%= a.image.url  %> alt="" class="Place-img" style='border-radius: 10px'>
    <p>User: <%=  a.owner.username%></p>
    <h4 style="background-color: rgb(252, 229, 229); border-radius: 10px;margin: 7px 0px; padding:13px 10px"><%= a.description %></h4>
    <h4> &#8377 <%= a.price.toLocaleString("en-IN") %></h4>
    <p>Location: <%= a.location %></p>
    <p>Country: <%= a.country %></p>
    <p><%= a.category %></p>
    <% if ( currentUser && currentUser._id.equals(a.owner._id)) { %>
        <button style="background-color: green; border-radius: 5px ; border: 1px solid rgb(125, 125, 125);" onclick="window.location.href='/listings/<%= a.id %>/edit'">Edit</button>
        <button style="background-color: red; border-radius: 5px ; border: 1px solid rgb(125, 125, 125);" onclick="window.location.href='/listings/<%= a.id %>/delete'">Delete</button>
    <% } %>
    
    
   
    <hr>
    <div>


        <div>
            <h3 style="text-align:center">All Review</h3>
            <div class="row">

           
            <% for(review of a.reviews){ %>
                   <div class="card col-4 ms-4" style="border: 1px solid black !important;">
                    <div class="card-body">
<h5 class="card-title">
    @<%= review.author.username %>   
</h5>



    <p class="starability-result card-text" data-rating="<%= review.rating %>" >
      </p>
      <p class="card-text">
        <%= review.comment %>
    </p>
    
                   <form method="post" action="/listings/<%= a.id %>/reviews/<%= review._id %>">
                        <button class="btn btn-danger btn-sm ">Delete</button>
                    </form>
                </div>
                </div>   
         <%  } %>
        </div>
        </div>



        <hr>
        <% if (currentUser) { %>
        <h3 style="text-align:center">Create a Review</h3>
        <form action="/listings/<%= a.id %>/reviews" novalidate  method="post">
            <div>
               
            <label for="rating" class="form-range">Rating:</label>
            <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div>
                <label for="comment">Comments</label>
               <textarea name="reviews[comment]" required  id="comment" cols="30" rows="10" style="min-height: 150px;"></textarea>
            </div>
            <button>Add Review</button>
        </form>
   <% } %>
        <hr> 
    </div>
    
    
</body>
